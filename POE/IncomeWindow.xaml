<Window x:Class="POE.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POE"
        mc:Ignorable="d"
        Title="Income" Height="400" Width="400" Background="#f58c8b" WindowStyle="None">
    <Grid>
        
        <StackPanel Margin="20" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="2">
            <Label Content="INCOME" FontSize="20px" HorizontalAlignment="Center"/>
            <Label Content="Enter your gross montly income before deductions:"/>
            <TextBox x:Name="TextBoxIncome" />
            <Label Content="Enter your estimated monthly tax deducted:"/>
            <TextBox x:Name="TextBoxTax" />
            <Button Margin="0,15,0,0" x:Name="ButtonSaveIncome" Content="Save" Click="ButtonSaveIncome_Click"/>
            <Button x:Name="ButtonNextIncome" Content="Next" Width="70px" Margin="0,15,0,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="NextIncome" />
        </StackPanel>
        
    </Grid>
</Window>
